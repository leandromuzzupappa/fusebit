---
import "./Hero.styles.css";
---

<section class="hero">
  <div class="hero-background">
    <div class="blob"></div>
    <div class="blob blob1"></div>
    <div class="blob blob2"></div>
    <div class="blur"></div>
  </div>
</section>

<script>
  const blob = document.querySelector(".blob");

  window.onpointermove = (event) => {
    if (!blob) return;

    const { clientX, clientY } = event;

    blob.animate(
      {
        left: `${clientX}px`,
        top: `${clientY}px`,
      },
      {
        duration: 3000,
        fill: "forwards",
      }
    );
  };
</script>
